<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:orientation="vertical"
    android:background="@color/colorBackground">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="16dp"
        android:background="@drawable/relative_view_bg"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/date_tv_down_list"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="14,september"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="16sp"
            />
        <ImageView
            android:id="@+id/cloud_img_view_of_down_list"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:layout_marginStart="30dp"
            android:src="@drawable/cloud_img"/>
        <TextView
            android:id="@+id/degree_tv_down_list"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="30"
            android:textColor="@color/white"
            android:layout_marginStart="70dp"
            android:gravity="center"
            android:textSize="16sp"/>

    </LinearLayout>
    

</LinearLayout>